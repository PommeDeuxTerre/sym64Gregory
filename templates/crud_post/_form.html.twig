            {{ form_widget(form.postDatePublished, {'attr': {'class': 'mt-1'}}) }}
            {{ form_errors(form.postDatePublished) }}
        </div>
        <button class="btn btn-primary">{{ button_label|default('Envoyer') }}</button>
    {{ form_end(form) }}
</div>
