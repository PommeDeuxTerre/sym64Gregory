<div class="container">
    {{ form_start(form) }}
        <div class="form-group mb-2">
            {{ form_label(form.postTitle, "Titre: ") }}
            <br>
            {{ form_widget(form.postTitle, {'attr': {'class': 'mt-1'}}) }}
            {{ form_errors(form.postTitle) }}
