<div class="container">
    {{ form_start(form) }}
        <div class="form-group mb-2">
            {{ form_label(form.title, "Titre: ") }}
            <br>
            {{ form_widget(form.title, {'attr': {'class': 'mt-1', 'placeholder': 'Titre'}}) }}
            {{ form_errors(form.title) }}
        </div>
        <div class="form-group mb-2">
            {{ form_label(form.postDescription, "Description: ") }}
            <br>
            {{ form_widget(form.postDescription, {'attr': {'class': 'mt-1'}}) }}
            {{ form_errors(form.postDescription) }}
        </div>
        <div class="form-group mb-2">
            {{ form_widget(form.postPublished, {'attr': {'class': 'mt-1'}}) }}
            {{ form_label(form.postPublished, "Publi√©") }}
            {{ form_errors(form.postPublished) }}
        </div>
        <div class="form-group mb-2">
            {{ form_label(form.sections, "Sections: ") }}
            <br>
            {{ form_widget(form.sections, {'attr': {'class': 'mt-1'}}) }}
            {{ form_errors(form.sections) }}
        </div>
        <div class="form-group mb-2">
            {{ form_label(form.tags, "Tags: ") }}
            <br>
            {{ form_widget(form.tags) }}
            {{ form_errors(form.tags) }}
        </div>
        <button class="btn btn-primary">{{ button_label|default('Envoyer') }}</button>
    {{ form_end(form) }}
</div>
