{% extends 'base.html.twig' %}

{% block title %}Commentaire Voir{% endblock %}

{% block body %}
    <!-- Page Header-->
    <header class="masthead">
        <div class="container position-relative px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <div class="site-heading">
                        <h1>Voir Commentaire</h1>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <h1>Commentaire</h1>

                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ comment.id }}</td>
                        </tr>
                        <tr>
                            <th>Post</th>
                            <td>{{ comment.post.title }}</td>
                        </tr>
                        <tr>
                            <th>Utilisateur</th>
                            <td>{{ comment.user.username }}</td>
                        </tr>
                        <tr>
                            <th>Message</th>
                            <td>{{ comment.commentMessage }}</td>
                        </tr>
                        <tr>
                            <th>Date de création</th>
                            <td>{{ comment.commentDateCreated ? comment.commentDateCreated|date('d/m/Y H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Publié</th>
                            <td>{{ comment.commentPublished ? 'Oui' : 'Non' }}</td>
                        </tr>
                    </tbody>
                </table>

                <a href="{{ path('app_comment_index') }}">Retour à la liste</a>

                <a href="{{ path('app_comment_edit', {'id': comment.id}) }}">modifier</a>

                {{ include('comment/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
