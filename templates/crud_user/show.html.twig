{% extends 'base.html.twig' %}

{% block title %}Utilisateur Voir{% endblock %}

{% block body %}
    <!-- Page Header-->
    <header class="masthead">
        <div class="container position-relative px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <div class="site-heading">
                        <h1>Utilisateur Voir</h1>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="container-fluid px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ user.id }}</td>
                        </tr>
                        <tr>
                            <th>Uniqid</th>
                            <td>{{ user.uniqid }}</td>
                        </tr>
                        <tr>
                            <th>Nom d'utilisateur</th>
                            <td>{{ user.username }}</td>
                        </tr>
                        <tr>
                            <th>Roles</th>
                            <td>{{ user.roles|map(role => role|slice(5)|lower)|join(', ') }}</td>
                        </tr>
                        <tr>
                            <th>Nom complet</th>
                            <td>{{ user.fullname }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th>Actif</th>
                            <td>{{ user.activate ? 'Yes' : 'No' }}</td>
                        </tr>
                    </tbody>
                </table>

                <a href="{{ path('app_crud_user_index') }}">Retour Ã  la liste</a>

                <a href="{{ path('app_crud_user_edit', {'id': user.id}) }}">Modifier</a>

                {{ include('crud_user/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
