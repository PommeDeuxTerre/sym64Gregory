<div class="container">
    {{ form_start(form) }}
        <div class="form-group mb-2">
            {{ form_label(form.username, "Nom d'utilisateur: ") }}
            <br>
            {{ form_widget(form.username, {'attr': {'class': 'mt-1'}}) }}
            {{ form_errors(form.username) }}
        </div>
        <div class="form-group mb-2">
            {{ form_label(form.roles, "rôles: ") }}
            <br>
            {{ form_widget(form.roles, {'attr': {'class': 'mt-1'}}) }}
            {{ form_errors(form.roles) }}
        </div>
        <div class="form-group mb-2">
            {{ form_label(form.fullname, "Nom complet ") }}
            <br>
            {{ form_widget(form.fullname, {'attr': {'class': 'mt-1'}}) }}
            {{ form_errors(form.fullname) }}
        </div>
        <div class="form-group mb-2">
            {{ form_widget(form.activate, {'attr': {'class': 'mt-1'}}) }}
            {{ form_label(form.activate, "Actif") }}
            {{ form_errors(form.activate) }}
        </div>

        <button class="btn btn-primary">{{ button_label|default('Créer') }}</button>
    {{ form_end(form) }}
</div>
